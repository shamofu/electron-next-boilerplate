{
  "name": "electron-next-boilerplate",
  "version": "0.0.0",
  "main": "app/main/index.js",
  "description": "A boilerplate for Electron + Next.",
  "scripts": {
    "start": "electron .",
    "build": "next build app/renderer && next export app/renderer",
    "dist": "yarn run build && build --x64 --publish=never",
    "lint": "eslint app/**",
    "lint:fix": "yarn run lint --fix",
    "test": "echo \"Error: no test specified\""
  },
  "author": "shamofu",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.45.5",
    "eslint": "^4.11.0",
    "eslint-plugin-react": "^7.4.0",
    "glob": "^7.1.2",
    "next": "^4.1.4",
    "node-sass": "^4.7.1",
    "normalize.css": "^7.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.0.8",
    "raw-loader": "^0.5.1",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.3"
  },
  "build": {
    "files": [
      "app/**/*",
      "!app/renderer",
      "app/renderer/out"
    ],
    "win": {
      "target": "dir"
    },
    "mac": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/electron-next-boilerplate.git"
  }
}
