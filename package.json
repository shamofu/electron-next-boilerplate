{
  "name": "electron-next-boilerplate",
  "version": "0.1.1",
  "main": "app/main/main.ts",
  "description": "A boilerplate for Electron + Next.",
  "scripts": {
    "start": "electron .",
    "build": "next build app/renderer && next export app/renderer",
    "dist": "yarn build && build --dir --x64 --publish=never",
    "lint": "tslint app/**/*.ts{,x}",
    "test": "yarn build && jest"
  },
  "author": "shamofu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shamofu/electron-next-boilerplate.git"
  },
  "build": {
    "files": [
      "app/**",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/out/**"
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/next.config.js",
      "!app/renderer/out/**",
      "!app/renderer/tests/**",
      "!app/renderer/.next/**"
    ],
    "coverageDirectory": ".coverage",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [["next/babel", { "preset-env": { "modules": "commonjs" } }]]
        }
      }
    }
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/next": "^2.4.8",
    "@types/react": "^16.0.40",
    "@types/styled-jsx": "^2.2.2",
    "@zeit/next-typescript": "^0.0.10",
    "electron": "^1.8.4",
    "electron-builder": "^20.5.1",
    "jest": "^22.4.2",
    "next": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "spectron": "^3.8.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.4"
  }
}
